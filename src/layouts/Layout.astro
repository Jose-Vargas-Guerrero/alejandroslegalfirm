---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image" href="images/logoalejandroslegalfirm.jpg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="En Alejandros LegalFirm ofrecemos asesoría legal confiable en derecho corporativo, familiar, penal y más. Contáctanos para resolver tus problemas legales con expertos.">
		<meta name="keywords" content="bufete de abogados, asesoría legal, derecho corporativo, derecho penal, derecho familiar, abogados expertos, Alejandros LegalFirm, firma legal, servicios legales, abogados confiables">
		<meta name="author" content="Alejandros LegalFirm">
		<!-- cormorant font -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Inter+Tight:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<!-- inter font -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<footer>
			Copyright © 2024 Alejandros Legal Firm, P.C. All rights reserved.
		</footer>
	</body>
</html>
<style is:global>
	
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body{
		height: auto;
		max-width: 100vw;
	}
	footer{
		width: 100%;
		position: absolute;
		text-align: center;
		margin: 4rem 0;
	}

	html {
		--black: #081c15;
		--white: #fffffc;
		--orange: #F39D24;
		--font-family-cormorant: "Cormorant Garamond", serif;
		--font-family-inter: "Inter Tight", serif;
	}

</style>
