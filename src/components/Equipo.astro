<style>
    .integrantesContainer{
        padding: 5rem 0;
        height: 100vh;
        max-width: 100vw;
    }

    .integrantesContainer > h2{
        text-align: center;
        font-family: var(--font-family-cormorant);
        font-size: 3rem;
    }

    .cardContainer{
        height: 100%;
        max-width: 100%;

        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .card{
        margin: 0 4rem;
        height: auto;
        width: 270px;
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: var(--black);
        transition: box-shadow ease-in 0.2s;
    }

    .card:hover{
        box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;
        
    }

    .card > strong{
        font-family: var(--font-family-inter);
        margin: 0.6rem 0;
        font-weight: normal;
        font-size: 1.2rem;
    }

    .card > p{
        font-family: var(--font-family-cormorant);
        font-size: 1.2rem;
        line-height: 16px;
    }


    /* media querys */
    /* Dispositivos móviles pequeños */
    @media (max-width: 576px) {
        .integrantesContainer{
        padding: 5rem 0;
        height: auto;
    }

    .integrantesContainer > h2{
        text-align: center;
        font-size: 2.5rem;
        margin: 0 0 2rem 0;
    }

    .cardContainer{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card{
        margin: 2rem 0;
        height: auto;
        width: 270px;
        display: flex;
        flex-direction: column;
