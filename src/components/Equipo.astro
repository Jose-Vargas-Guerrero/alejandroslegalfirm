    .card > strong{
        font-family: var(--font-family-inter);
        margin: 0.6rem 0;
        font-weight: normal;
        font-size: 1.5rem;
    }

    .card > p{
        font-family: var(--font-family-cormorant);
        font-size: 1.4rem;
        line-height: 16px;
    }
    }

    /* Dispositivos móviles grandes (como teléfonos más anchos) */
    @media (min-width: 577px) and (max-width: 768px) {
        .integrantesContainer{
        padding: 5rem 0;
        height: auto;
    }

    .integrantesContainer > h2{
        text-align: center; 
